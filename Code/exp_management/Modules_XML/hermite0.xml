<Module name="hermite0">
   <description>
      Time-symmetric N-body integration module with shared but variable time step,
      using the Hermite integration scheme
   </description>
   <domain>Stellar Dynamics</domain>
   <codeLocation>src/amuse/community/hermite0/interface.py</codeLocation>
   <className>Hermite</className>
   <isParallel>true</isParallel>
   <stoppingConditions>56</stoppingConditions>
   <Parameter name="epsilon_squared">
   		<description>
			Smoothing parameter for gravity calculations
		</description>
		<defaultValue>
            0.0
        </defaultValue>
		<Units>
			<description>length squared</description>
			<symbolicDescription>length*length</symbolicDescription>
			<Unit type="Length" exponent="2"/>
		</Units>
   </Parameter>
   <Parameter name="dt_param">
   		<description>
            Timestep scaling factor
        </description>
        <defaultValue>
            0.03
        </defaultValue>
        <Units>
            <description>none</description>
            <symbolicDescription>none</symbolicDescription>
            <Unit type="None" exponent="1"/>
        </Units>
   </Parameter>
   <Parameter name="dt_dia">
        <description>
            Time interval between diagnostics output
        </description>
        <defaultValue>
            1.0
        </defaultValue>
        <Units>
            <description>time</description>
            <symbolicDescription>time</symbolicDescription>
            <Unit type="Time" exponent="1"/>
        </Units>
   </Parameter>
   <Parameter name="time">
        <description>
            Current Simulation Time
        </description>
        <defaultValue>
            0.0
        </defaultValue>
        <Units>
            <description>time</description>
            <symbolicDescription>time</symbolicDescription>
            <Unit type="Time" exponent="1"/>
        </Units>
   </Parameter>
   <Parameter name="pair_factor">
        <description>
            Radius factor for pair detection
        </description>
        <defaultValue>
            1.0
        </defaultValue>
        <Units>
            <description>none</description>
            <symbolicDescription>none</symbolicDescription>
            <Unit type="None" exponent="1"/>
        </Units>
   </Parameter>
</Module>
